\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
What is a maximally monotone operator?
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
set-valued operator 
\begin_inset Formula $T$
\end_inset

: takes a vector 
\begin_inset Formula $x$
\end_inset

 and outputs a set 
\begin_inset Formula $T(x)$
\end_inset

 in 
\begin_inset Formula $\mathbf{R}^{n}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
if 
\begin_inset Formula $u\in T(x)$
\end_inset

 then we say 
\begin_inset Formula $(x,u)$
\end_inset

 is in 
\begin_inset Formula $\mathop{{\bf gra}}T$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\mathop{{\bf gra}}T=\{(x,u)\mid u\in T(x)\}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 is monotone if for every 
\begin_inset Formula $(x,u),(y,v)\in\mathop{{\bf gra}T}$
\end_inset

 
\begin_inset Formula 
\[
\left\langle x-y\mid u-v\right\rangle \geq0
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 is maximally monotone if 
\begin_inset Formula $\mathop{{\bf gra}}T$
\end_inset

 is not properly contained by any other monotone operator's graph
\end_layout

\end_deeper
