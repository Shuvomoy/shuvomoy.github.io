\begin_deeper
\begin_layout Itemize
\begin_inset Formula $(z_{n})_{n\in\mathbf{N}}$
\end_inset

: sequence of vectors generated for some chosen initial point 
\begin_inset Formula $z_{0}$
\end_inset


\end_layout

\begin_layout Standard
if the following holds:
\end_layout

\begin_layout Itemize
there exists a 
\begin_inset Formula $z\in\mathop{{\bf fix}}\tilde{T}$
\end_inset

, such that 
\begin_inset Formula $\sum_{n=0}^{\infty}\left(\sigma_{z_{n}z}^{\tilde{R}}\right)^{2}$
\end_inset

 is bounded above, and 
\begin_inset Formula $\|z_{0}-z\|^{2}$
\end_inset

 is finite
\end_layout

\begin_deeper
\begin_layout Itemize
define 
\begin_inset Formula $r:=\sqrt{\|z_{0}-z\|^{2}+\sum_{n=0}^{\infty}\left(\sigma_{z_{n}z}^{\tilde{R}}\right)^{2}}$
\end_inset


\end_layout

