\begin_deeper
\begin_layout Itemize
NC-DRS:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}x_{n+1} & =\mathbf{prox}_{\gamma f}\left(z_{n}\right)\\
y_{n+1} & =\tilde{\mathbf{\Pi}}_{\mathcal{C}}\left(2x_{n+1}-z_{n}\right)\\
z_{n+1} & =z_{n}+y_{n+1}-x_{n+1}.
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\tilde{T}$
\end_inset

 : NC-DRS operator
\begin_inset Formula 
\[
\tilde{T}=\tilde{\mathbf{\Pi}}_{\mathcal{C}}\left(2\mathbf{prox}_{\gamma f}-I_{n}\right)+I_{n}-\mathbf{prox}_{\gamma f}.
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\tilde{R}$
\end_inset

: reflection operator of 
\begin_inset Formula $\tilde{T}$
\end_inset


\begin_inset Formula 
\[
\tilde{R}=2\tilde{T}-I_{n}
\]

\end_inset


\end_layout

\begin_layout Itemize
NC-DRS in compact form: 
\begin_inset Box Boxed
