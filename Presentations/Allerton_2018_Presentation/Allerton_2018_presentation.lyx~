\begin_layout PlainFrame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Constructing NC-ADMM
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
original problem: 
\begin_inset Formula $\textrm{minimize}_{x\in\mathcal{C}}\;f(x)$
\end_inset


\end_layout

\begin_layout Itemize
take dual and apply NC-DRS to the dual
\end_layout

\begin_layout Itemize
resultant algorithm is relaxed NC-ADMM
\begin_inset Formula 
\begin{align*}
x_{n+1} & =\mathbf{prox}_{\gamma f}\left(y_{n}-z_{n}\right)\\
y_{n+1} & =\mathbf{\Pi}_{\mathop{{\bf conv}}\mathcal{C}}\left(z_{n}+x_{n+1}\right)\\
z_{n+1} & =z_{n}-y_{n+1}+x_{n+1}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
relaxed NC-ADMM solves 
\begin_inset Formula $\textrm{minimize}_{x\in\mathop{{\bf conv}C}}\;f(x)$
\end_inset


\end_layout

\end_deeper
\begin_layout Plain Layout
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout PlainFrame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Constructing NC-ADMM (continued)
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
relaxed NC-ADMM 
\begin_inset Formula 
\begin{align*}
x_{n+1} & =\mathbf{prox}_{\gamma f}\left(y_{n}-z_{n}\right)\\
y_{n+1} & =\mathbf{\Pi}_{\mathop{{\bf conv}}\mathcal{C}}\left(z_{n}+x_{n+1}\right)\\
z_{n+1} & =z_{n}-y_{n+1}+x_{n+1}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
solves 
\begin_inset Formula $\textrm{minimize}_{x\in\mathop{{\bf conv}C}}\;f(x)$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
replace 
\begin_inset Formula $\mathbf{\Pi}_{\mathop{{\bf conv}}\mathcal{C}}$
\end_inset

 with 
\begin_inset Formula $\tilde{\mathbf{\Pi}}_{\mathcal{C}}$
\end_inset

 to solve 
\begin_inset Formula $\textrm{minimize}_{x\in\mathcal{C}}\;f(x)$
\end_inset


\end_layout

\begin_layout Itemize
resultant algorithm is NC-ADMM:
\begin_inset Formula 
\[
\begin{aligned}x_{n+1} & =\mathbf{prox}_{\gamma f}\left(y_{n}-z_{n}\right)\\
y_{n+1} & =\tilde{\mathbf{\Pi}}_{\mathcal{C}}\left(x_{n+1}+z_{n}\right)\\
z_{n+1} & =z_{n}-y_{n+1}+x_{n+1}
\end{aligned}
\]

\end_inset


\end_layout

\end_deeper
\end_inset


\end_layout

\end_deeper
\end_deeper
